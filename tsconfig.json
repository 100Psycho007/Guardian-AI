{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["ESNext"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021",
    "types": ["expo", "jest", "react", "react-native", "expo-router"]
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "app",
    "components",
    "hooks",
    "lib",
    "store",
    "__tests__",
    "*.ts",
    "*.tsx"
  ]
}
